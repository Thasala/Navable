{
  "manifest_version": 3,
  "name": "Navable (Phase A)",
  "version": "0.1.0",
  "action": {
    "default_title": "Navable",
    "default_popup": "src/popup/popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}